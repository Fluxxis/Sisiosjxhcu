BOT_TOKEN=PUT_YOUR_TOKEN_HERE
ADMIN_TG_IDS=123456789

PORT=8787
CORS_ORIGIN=http://localhost:3000

# 1=DEMO odds (90% to 1..4). 0=PROD odds (1..5 2x rarer)
DEMO_MODE=1
DEMO_MAIN_PRIZE_IDS=1,2,3,4
DEMO_MAIN_PROB=0.9

ROUND_TARGET_TON=0.10
RAKEBACK_PCT=0.005
REFERRAL_PCT=0.0025
MIN_WITHDRAW_TON=1

TREASURY_ADDRESS=EQxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ---- TON (mainnet by default) ----
# mainnet | testnet
TON_NETWORK=mainnet

# TON Center HTTP API (used for deposit detection + wallet RPC)
# mainnet:
#   https://toncenter.com/api/v2
# testnet:
#   https://testnet.toncenter.com/api/v2
TONCENTER_BASE_URL=https://toncenter.com/api/v2
TONCENTER_API_KEY=

# TON Center JSON-RPC (used for automatic withdrawals)
# mainnet: https://toncenter.com/api/v2/jsonRPC
# testnet: https://testnet.toncenter.com/api/v2/jsonRPC
TON_RPC_URL=https://toncenter.com/api/v2/jsonRPC

# 24 words mnemonic for the treasury wallet (server will send TON automatically on withdrawals)
TREASURY_MNEMONIC=

# ---- CryptoBot / Crypto Pay ("Send" deposits) ----
# Get token in @CryptoBot -> Crypto Pay -> Create App
CRYPTOBOT_API_TOKEN=
# mainnet: https://pay.crypt.bot
# testnet: https://testnet-pay.crypt.bot
CRYPTOBOT_BASE_URL=https://pay.crypt.bot

# Worker intervals (ms)
DEPOSIT_POLL_MS=6000
WITHDRAW_POLL_MS=4000

# For local dev you can bypass Telegram:
ALLOW_DEMO_AUTH=1
SKIP_SUB_CHECK=1
